@model Models.RegisterModel
@using Domain.Entities;
@using Manager.Application;
@using Infrastructure.CrossCutting;

@{
    ViewBag.Title = "register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="no-bottom no-top" id="content">
    <div id="top"></div>

    @if (string.IsNullOrEmpty(ViewBag.seccion))
    {
        List<SelectListItem> countrys = new List<SelectListItem>();
        countrys.Add(new SelectListItem() { Text = "Perú (+51)", Value = "+51" });
        countrys.Add(new SelectListItem() { Text = "Argentina (+32)", Value = "+32" });
        countrys.Add(new SelectListItem() { Text = "Bolivia (+68)", Value = "+68" });
        countrys.Add(new SelectListItem() { Text = "Colombia (+170)", Value = "+170" });
        countrys.Add(new SelectListItem() { Text = "Chile (+152)", Value = "+152" });
        countrys.Add(new SelectListItem() { Text = "Ecuador (+218)", Value = "+218" });
        countrys.Add(new SelectListItem() { Text = "Venezuela (+862)", Value = "+862" });
        
        
        <section class="full-height relative no-top no-bottom vertical-center" data-bgimage="url(/Content/theme3/images/5.jpg) top" data-stellar-background-ratio=".5">
            <div class="overlay-gradient t50">
                <div class="center-y relative">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-lg-6 col-md-12 offset-md-0 text-light">
                                <h1 class="wow fadeInUp" data-wow-delay=".5s">La <span class="id-color" style="color: darkorange;">Tienda Virtual</span> que se ajusta a tu negocio</h1>

                                <p class="lead wow fadeInUp" data-wow-delay=".75s">Empieza a vender tus productos rápidamente.<br /> Gestiona tus productos, ventas, pedidos y delivery en una sola plataforma desde tu Panel de Administración. Enlace con un click a Whatsapp, Messenger de Facebook y mucho más.</p>
                            </div>

                            <div class="col-lg-4 offset-lg-2 text-center wow fadeIn" data-wow-delay=".5s">
                                <div class="box-rounded padding40" data-bgcolor="#ffffff">
                                    <h3 class="mb10">Empecemos! <i class="fa fa-shopping-cart" style="color: darkorange;" aria-hidden="true"></i></h3>
                                    <p>Prueba 1 Mes Gratis</p>
                                   
                                    @using (Html.BeginForm("RegisterUserTienda", "TiendaVirtual",
                                            FormMethod.Post, htmlAttributes: new { @class = "form-border" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true)

                                        <div class="field-set">
                                            @Html.ValidationMessageFor(model => model.V_NOMBRES)
                                            @Html.TextBoxFor(m => m.V_NOMBRES, new { @class = "form-control", @placeholder = "Nombres", @required = "required" })
                                            
                                        </div>
                                        <div class="field-set">
                                            @Html.ValidationMessageFor(model => model.V_APELLIDOS)
                                            @Html.TextBoxFor(m => m.V_APELLIDOS, new { @class = "form-control", @placeholder = "Apellidos", @required = "required" })
                                            
                                        </div>
                                        <div class="form-group">
                                            @Html.ValidationMessageFor(model => model.pais)
                                            @Html.DropDownListFor(m => m.pais, countrys, new { @class = "form-control" })
                                           
                                        </div>
                                        <div class="form-group">
                                            @Html.ValidationMessageFor(model => model.V_TELEFONO)
                                            @Html.TextBoxFor(m => m.V_TELEFONO, new { @class = "form-control", @placeholder = "Celular", @required = "required" })
                                        </div>
                                        <div class="field-set">
                                            @Html.ValidationMessageFor(model => model.V_EMAIL)
                                            @Html.TextBoxFor(m => m.V_EMAIL, new { @class = "form-control", @placeholder = "Correo", @required = "required" })
                                            
                                        </div>
                                        <div class="field-set">
                                            @Html.ValidationMessageFor(model => model.Password)
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Clave", @required = "required" })
                                            
                                        </div>
                                        <div class="field-set">
                                            @Html.ValidationMessageFor(model => model.ConfirmPassword)
                                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirmar Clave", @required = "required" })
                                            
                                        </div>
                                        <div class="field-set">
                                            <button type="submit" class="btn btn-custom btn-fullwidth color-2"> Registrarme</button>
                                        </div>
                                        <div class="clearfix"></div>

                                        <div class="spacer-single"></div>
                                        <div class="field-set">
                                            <a href="@Url.Action("login","Admin")"><i class="fa fa-user" aria-hidden="true"></i> Ya tengo una cuenta!</a>
                                        </div>
                                                <!-- social icons -->
                                        <ul class="list s3 d-none">
                                            <li>Login with:</li>
                                            <li><a href="#">Facebook</a></li>
                                            <li><a href="#">Google</a></li>
                                        </ul>
                                                <!-- social icons close -->

                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        
    }
    else if (Convert.ToString(ViewBag.seccion) == "11")
    {
        <section class="full-height relative no-top no-bottom vertical-center" data-bgimage="url(/Content/theme3/images/5.jpg) top" data-stellar-background-ratio=".5">
            <div class="overlay-gradient t50">
                <div class="center-y relative">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-md-12 offset-md-0 text-light text-center">
                                <h1 class="wow fadeInUp" data-wow-delay=".5s">Gracias por Registrarte! <br /> Tu <span class="id-color">Tienda en Línea</span> te espera!</h1>

                                <p class="lead wow fadeInUp" style="background: darkblue;" data-wow-delay=".75s">Se envió un correo electrónico para la confirmación de su cuenta.</p>

                                <div class="field-set">
                                    <a href="@Url.Action("Index", "Admin")" class="btn btn-custom color-2"> Login</a>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
  

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}