@model List<Domain.EntitiesLogic.CarritoCompraEL>

@{
    ViewBag.Title = "Mis Ordenes de Compra";
    Layout = "~/Views/Shared/_Apptv.cshtml";
}
<style>
    .form-group{
        margin-bottom: inherit !important;
    }
    .form-group > label{
        font-weight:bold;
    }
</style>
<!-- cart-main-area start -->
<div class="cart-main-area ptb--80 bg__white">
    <div class="container">

        <div class="row">

            <div class="col-md-12 col-sm-12">
                <h2 class="section-title-3"> <span class="ti-shopping-cart"></span> Mis Ordenes</h2>
                <br />
                    @{
                        if (Model.Count > 0)
                        {
                            foreach (var item in Model)
                            {
                            <form style="font-size:11px;">
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label" style="text-align:right;">Cod. Compra:</label>
                                    <div class="col-sm-2">
                                        <label>@item.codigoCompra</label>
                                    </div>
                                    <label class="col-sm-2 col-form-label" style="text-align:right;">Estado Compra:</label>
                                    <div class="col-sm-2">
                                        <label>@item.estadoCompra</label>
                                    </div>
                                    <label class="col-sm-2 col-form-label" style="text-align:right;">Fecha Compra:</label>
                                    <div class="col-sm-2">
                                        <label>@item.fechaCompra</label>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label" style="text-align:right;">Fecha Entrega:</label>
                                    <div class="col-sm-2">
                                        <label>@item.fechaEntregaAprox</label>
                                    </div>
                                    <label class="col-sm-2 col-form-label" style="text-align:right;">Total Compra:</label>
                                    <div class="col-sm-2">
                                        <label>S/.@item.total</label>
                                    </div>
                                    <label class="col-sm-2 col-form-label" style="text-align:right;">Forma Pago:</label>
                                    <div class="col-sm-2">
                                        <label>@item.formaPago</label>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label" style="text-align:right;">Direccion Entrega:</label>
                                    <div class="col-sm-10">
                                        <label>@item.direccion</label>
                                    </div>
                                </div>
                                
                            </form>
                            <div class="table-responsive">
                                <table style="width:100%;">
                                    <tbody>
                                        <tr>
                                            <td></td>
                                            <td colspan="2" style="font-weight:bold;"><label>Detalle de Compra:</label></td>
                                        </tr>
                                        @{
                                            int i = 1;
                                            foreach (var item2 in item.listProductos)
                                            {
                    
                                            <tr>
                                                <td style="text-align:right;">@(i++).</td>
                                                <td style="text-align:center;" ><img style="width:60px;" src="@item2.V_URL_PRINCIPAL" alt="@item2.V_PRODUCTO" /></td>
                                                <td style="text-align:left;">
                                                    Cod. Producto: @item2.I_CODIGO_PRODUCTO<br />
                                                    <a href="#">Producto: @item2.V_PRODUCTO</a><br />
                                                    Precio: S/ @item2._detalleCompraEN.precio<br />
                                                    Cant: @item2._detalleCompraEN.cantidad<br />
                                                    Total: S/ @item2._detalleCompraEN.total
                                                </td>
                        
                                            </tr>
                                            <tr style="height:10px;"></tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <hr />
                            }
                        }
                        else
                        {
                            <div class="alert alert-warning" role="alert">
                                No tiene ordenes registrados en esta tienda.
                            </div>
                        }
}

            </div>
        </div>


    </div>
</div>
<!-- cart-main-area end -->

@section Scripts {

    <script type="text/javascript">

    $(document).ready(function () {
        $('#header').addClass('header--3 bg__white');
        $('.slider__container').remove();
    });
  
    </script>
}